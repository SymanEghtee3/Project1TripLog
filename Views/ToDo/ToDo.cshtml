@model Trip
@{
    ViewBag.Title = "Add Trip - Page 3";
}

<h2>@ViewBag.Title</h2>

<form asp-action="AddInfo" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <input asp-for="ThingToDo1" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="ThingToDo2" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="ThingToDo3" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-outline-primary">Cancel</a>
</form>
