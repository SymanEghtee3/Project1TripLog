@model Trip
@{
    ViewBag.Title = "Add Trip - Page 2";
}

<h2>@ViewBag.Title</h2>

<form asp-action="AddInfo" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AccomodationPhone">Phone Number</label>
        <input asp-for="AccomodationPhone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AccomodationEmail">Email Address</label>
        <input asp-for="AccomodationEmail" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-outline-primary">Cancel</a>
</form>
